<Window x:Class="M0n0p0ly.EndGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M0n0p0ly"
        mc:Ignorable="d"
        Title="Victory" Height="320" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="tbWinner" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="260" Height="90" FontSize="20" TextWrapping="Wrap"/>
        <TextBlock x:Name="tbOtherPlayers" TextAlignment="Left" HorizontalAlignment="Left" Margin="68,110,0,0" VerticalAlignment="Top" Width="180" Height="140" FontSize="14" FontFamily="Courier New"/>
        <Button  x:Name="btnExit" Content="Thanks for Playing" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="150" Click="BtnExit_Click"/>
    </Grid>
</Window>
